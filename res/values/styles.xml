<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/black</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/PhotometryActionBar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <!-- Action Bar Style -->
    <style name="PhotometryActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_blue</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium"></style>

    <style name="TextAppearance.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Large" parent="@android:style/TextAppearance.Large"></style>

    <style name="TextAppearance.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>